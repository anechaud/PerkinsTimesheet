@model WeeklyEffortTrackerPerkins.Models.Input

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.associate)
                @Html.EditorFor(model => model.associate)
                @Html.ValidationMessageFor(model => model.associate, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.month)
                @Html.EditorFor(model => model.month)
                @Html.ValidationMessageFor(model => model.month, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.year)
                @Html.EditorFor(model => model.year)
                @Html.ValidationMessageFor(model => model.year, "", new { @class = "text-danger" })

                <input type="submit" value="View" class="btn btn-default" />
    </div>
}

